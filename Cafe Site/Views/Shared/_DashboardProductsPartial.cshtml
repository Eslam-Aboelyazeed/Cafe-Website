@model DashboardViewModel


<div id="products-section" data-current-page="@Model.CurrentPage" data-total-pages="@Model.TotalPages">

    <div class="container-fluid p-0" style="overflow:auto">
        <table class="table text-center text-light">
            <thead>
                <tr>
                    <th style="text-align:center">
                        @Html.DisplayNameFor(model => model.Products[0].Product_Name)
                    </th>
                    <th style="text-align:center">
                        @Html.DisplayNameFor(model => model.Products[0].Product_Type)
                    </th>
                    <th style="text-align:center">
                        @Html.DisplayNameFor(model => model.Products[0].Product_Quantity)
                    </th>
                    <th style="text-align:center">
                        @Html.DisplayNameFor(model => model.Products[0].Product_Description)
                    </th>
                    <th style="text-align:center">
                        @Html.DisplayNameFor(model => model.Products[0].SPrice)
                    </th>
                    <th style="text-align:center">
                        @Html.DisplayNameFor(model => model.Products[0].MPrice)
                    </th>
                    <th style="text-align:center">
                        @Html.DisplayNameFor(model => model.Products[0].LPrice)
                    </th>
                    <th style="text-align:center">
                        @Html.DisplayNameFor(model => model.Products[0].Product_Image)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Products)
                {
                    <tr id="@item.Product_Id">
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Product_Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Product_Type)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Product_Quantity)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Product_Description)
                        </td>
                        <td class="align-middle" id="S@(item.Product_Id)">
                            @Html.DisplayFor(modelItem => item.SPrice)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.MPrice)
                        </td>
                        <td class="align-middle" id="L@(item.Product_Id)">
                            @Html.DisplayFor(modelItem => item.LPrice)
                        </td>
                        <td class="align-middle">
                            <img src="data:image/png;base64,@item.Product_Image" alt="@item.Product_Name Image" style="height:50px">
                        </td>
                        <td class="align-middle" style="display:grid;gap: 5px;font-family: 'Satisfy', cursive;">
                            <a class="action update" href="/admindashboard/update/@item.Product_Id" style="color:#ddd !important; background:#BE9C79 !important; font-weight:bold; border-radius: 2px; width: 150px; padding: 5px 0;" onmouseover="this.style.backgroundColor='darkorange'" onmouseout="this.style.backgroundColor='#BE9C79'">Update</a>
                            <a class="action delete" style="cursor:pointer;color:#ddd !important; background:#BE9C79 !important; font-weight:bold; border-radius: 2px; padding: 5px 0; " onmouseover="this.style.backgroundColor='darkorange'" onmouseout="this.style.backgroundColor='#BE9C79'" onclick="ShowModal(@item.Product_Id)">Delete</a>
                            <a class="action deleteSize" style="cursor:pointer;color:#ddd !important; background:#BE9C79 !important; font-weight:bold; border-radius: 2px; padding: 5px 0;" onmouseover="this.style.backgroundColor='darkorange'" onmouseout="this.style.backgroundColor='#BE9C79'" onclick="ShowModalSize(@item.Product_Id)">Delete Size</a>
                            <a class="action orderHistory" href="/admindashboard/GetOrdersHistory/@item.Product_Id" style="cursor:pointer;color:#ddd !important; background:#BE9C79 !important; font-weight:bold; border-radius: 2px; padding: 5px 0;" onmouseover="this.style.backgroundColor='darkorange'" onmouseout="this.style.backgroundColor='#BE9C79'">Order History</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>